{
  "exclude": ["node_modules", "dist"],
  "compilerOptions": {
    "outDir": "./dist",
    "composite": false,
    "declaration": true,
    "declarationDir": "./dist",
    "declarationMap": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "inlineSources": false,
    "isolatedModules": true,
    "moduleResolution": "node",
    "noUnusedLocals": false,
    "noUnusedParameters": false,
    "preserveWatchOutput": true,
    "skipLibCheck": true,
    "jsx": "react-jsx",
    "lib": ["dom", "ESNext"],
    "module": "ESNext",
    "target": "ESNext"
  }
}
